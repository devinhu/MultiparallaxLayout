<?xml version="1.0" encoding="utf-8"?>
<it.francescopezzato.multiparallaxlayout.MultiparallaxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:multiparallax="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_header_height"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_snake"
        android:scaleType="centerCrop"
        multiparallax:ratioY="0.85"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:layout_alignParentBottom="true"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:id="@+id/list_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_list_header_title"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/list_header_subtitle"
        multiparallax:ratioY="0.5"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:id="@+id/list_header_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/fragment_list_header_subtitle"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        multiparallax:ratioY="0.6"
        />

    <TextView
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/list_header_logo"
        android:background="@drawable/header_logo_background"
        multiparallax:ratioY="-0.3"
        multiparallax:ratioX="0.1"
        android:gravity="center"
        android:text="S"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        />


</it.francescopezzato.multiparallaxlayout.MultiparallaxLayout>